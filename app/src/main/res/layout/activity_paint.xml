<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    tools:context=".PaintActivity">

    <RelativeLayout
        android:id="@+id/layout_save"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_anh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/anh8" />

        <com.utehy.betomau.DisplayPaint
            android:id="@+id/drawing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/drawing"
        android:layout_weight="8"

        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <GridView
                android:id="@+id/lv_listmau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:numColumns="2"
                android:scrollbars="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/btn_reset"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/reload" />

            <ImageView
                android:id="@+id/btn_xoa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/eraser" />

            <ImageView
                android:id="@+id/btn_ve"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/draw" />
            <ImageView
                android:id="@+id/btn_zoom"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/zoom"/>

            <ImageView
                android:id="@+id/btn_chup"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/capture" />
            <ImageView
                android:baselineAlignBottom="true"
                android:rotation="180"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/btn_thoat"
                android:src="@drawable/exit"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>